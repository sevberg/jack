<div class="container-fluid">
<div class="row" id="behind_nav"></div>

<!-- Logo -->

<div class="row" id="logo">
    <div class="col-lg-12">
        <img class="img-responsive center-block" src="pics/Logo.png" style="width:30%" />
    </div>
</div>
<div class="row answer" id="answer_callJack">
    <div class="container">
        <div class="row">
            <form class="form-inline" role="form" method="post" action="/register_request">
                <div class="form-group">
                    <label class="sr-only" for="Name">Name</label>
                    <input type="text" class="form-control" id="Name-input" placeholder="Name" style="width:242px">
                    <label class="sr-only" for="Contact">Contact</label>
                    <input type="text" class="form-control" id="Contact-input" placeholder="Contact" style="width:242px">
                </div><br />
                <div class="form-group">
                    <label class="sr-only" for="Job Location">Job Location</label>
                    <input type="text" class="form-control" id="job_location-input" placeholder="Job Location" style="width:490px; margin-top:5px">
                </div><br />
                <div class="row">
                    <div class="col-lg-12">
                        <textarea class="form-control" rows="5" id="job_desc-input" placeholder="What can Jack do for you?" maxlength="132"></textarea>
                        <div class="btn-group-vertical" role="group">
                            <div class="input-group" style="text-align:left">
                                <div class="radio">
                                    <label>
                                        <input type="radio" name="optionsRadios-input" id="optionsRadios1" value="General" checked>
                                        General Labor
                                    </label>
                                </div><br />
                                <div class="radio">
                                    <label>
                                        <input type="radio" name="optionsRadios-input" id="optionsRadios2" value="Cleaning">
                                        Cleaning & Organization
                                    </label>
                                </div><br />
                                <div class="radio">
                                    <label>
                                        <input type="radio" name="optionsRadios-input" id="optionsRadios3" value="Personal">
                                        Personal Assistance
                                    </label>
                                </div><br />
                                <div class="radio">
                                    <label>
                                        <input type="radio" name="optionsRadios-input" id="optionsRadios4" value="Errands">
                                        Errands
                                    </label>
                                </div><br />
                                <div class="radio">
                                    <label>
                                        <input type="radio" name="optionsRadios-input" id="optionsRadios5" value="Roadside Assistance">
                                        Roadside Assistance
                                    </label>
                                </div><br />
                            </div>
                        </div>
                    </div>
                </div><br />
                <div>
                    <button class="btn btn-success" type="submit" id="getitdone-btn">Get It Done</button>
                </div>

                <div class="row">
                    <div class="col-sm-4 col-sm-offset-4" id="response_field"></div>
                </div>

                <script type="text/javascript">
                $('#getitdone-btn').click(function( e ){
                    e.preventDefault();

                    var data = {};
                    data['name'] = $('#Name-input').val();
                    data['contact'] = $('#Contact-input').val();
                    data['job_location'] = $('#job_location-input').val();
                    data['job_desc'] = $('#job_desc-input').val();

                    if($('#optionsRadios1').attr("checked", "checked")){
                        data['job_type'] = $('#optionsRadios1').val();
                    } 
                    else if($('#optionsRadios2').attr("checked", "checked")){
                        data['job_type'] = $('#optionsRadios2').val();
                    } 
                    else if($('#optionsRadios3').attr("checked", "checked")){
                        data['job_type'] = $('#optionsRadios2').val();
                    } 
                    else if($('#optionsRadios4').attr("checked", "checked")){
                        data['job_type'] = $('#optionsRadios2').val();
                    } 
                    else if($('#optionsRadios5').attr("checked", "checked")){
                        data['job_type'] = $('#optionsRadios2').val();
                    } 

                    $.post('/register_request', data, function(res){
                        if( res == "success") {
                            $("#response_field").html("<h3>Thanks!</h3>");
                            $("#getitdone-btn").attr("disabled","disabled");
                        } else {
                            $("#response_field").html("<h3>Something went wrong :(</h3>");
                        }
                    });
                });
                </script>

            </form>
        </div>
    </div>
</div>
