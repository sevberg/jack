
<div class="container-fluid">

	<div class="row" style="margin-top:200px">
		<div class="col-sm-8 col-sm-offset-2">
			<div class="text-center">
				<h3  style="color:white;">Recent Requests</h3>
				<button class="btn btn-success" role="button" onclick="pullData(5)">Last 5 Minutes</button>
				<button class="btn btn-success" role="button" onclick="pullData(60)">Last Hour</button>
				<button class="btn btn-success" role="button" onclick="pullData(-1)">All Time</button>
				<div class="input-group col-sm-4 col-sm-offset-4">
				    <input type="text" class="form-control" placeholder="Time in minutes">
			      	<span class="input-group-btn">
			        	<button class="btn btn-success" type="button">Custom</button>
			      	</span>
				</div>
			</div>
		</div>
	</div>

	<script type="text/javascript">
		var pullData = function( maxTime ){

			console.log(maxTime);

			$.post('/check_requests', {maxTime:maxTime}, function( res ){
				$('#results').html(res);
			});
		}

		pullData( '12' );

	</script>


	<!-- Results Section -->	
	<div class="row" style="margin-top:200px">
		<div class="col-sm-8 col-sm-offset-2 text-center" id="results" style="color:white">
			<p>Make a Choice</p>
		</div>
	</div>

</div>